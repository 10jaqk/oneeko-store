<section class="hero-banner" style="background-image: url('{{ 'hero.banner.png' | asset_url }}'); background-size: cover; background-position: center bottom;">
  <div class="hero-banner__overlay" style="background-color: rgba(0, 0, 0, 0.35);"></div>

  <div class="hero-banner__content container">
    <div class="hero-banner__text">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="hero-banner__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}

      <div class="hero-banner__buttons">
        {%- if section.settings.button_1_text != blank -%}
          <a href="{{ section.settings.button_1_link }}" class="btn btn-primary">
            {{ section.settings.button_1_text }}
          </a>
        {%- endif -%}

        {%- if section.settings.button_2_text != blank -%}
          <a href="{{ section.settings.button_2_link }}" class="btn btn-outline">
            {{ section.settings.button_2_text }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
  }

  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-banner__content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: var(--spacing-12) 0;
  }

  .hero-banner__text {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-banner__heading {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-extrabold);
    color: white;
    margin-bottom: var(--spacing-6);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-banner__subheading {
    font-size: var(--font-size-lg);
    color: white;
    margin-bottom: var(--spacing-8);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  .hero-banner__buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-4);
    flex-wrap: wrap;
  }

  @media (max-width: 767px) {
    .hero-banner {
      min-height: 400px;
    }

    .hero-banner__heading {
      font-size: var(--font-size-3xl);
    }

    .hero-banner__subheading {
      font-size: var(--font-size-base);
    }

    .hero-banner__buttons {
      flex-direction: column;
      width: 100%;
    }

    .hero-banner__buttons .btn {
      width: 100%;
    }
  }

  @media (min-width: 768px) {
    .hero-banner {
      min-height: 600px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 40
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Premium Tech Accessories for Modern Life"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Free shipping on orders over $50 Â· 30-day returns"
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
