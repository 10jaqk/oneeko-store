<footer class="footer">
  <div class="footer__main">
    <div class="container">
      <div class="footer__grid grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4">
        <!-- Column 1: About -->
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.column_1_heading }}</h3>
          <div class="footer__content">
            {{ section.settings.column_1_text }}
          </div>
        </div>

        <!-- Column 2: Quick Links -->
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.column_2_heading }}</h3>
          <ul class="footer__links">
            {%- for link in section.settings.menu_column_2.links -%}
              <li class="footer__link-item">
                <a href="{{ link.url }}" class="footer__link">
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </div>

        <!-- Column 3: Customer Service -->
        <div class="footer__column">
          <h3 class="footer__heading">{{ section.settings.column_3_heading }}</h3>
          <ul class="footer__links">
            {%- for link in section.settings.menu_column_3.links -%}
              <li class="footer__link-item">
                <a href="{{ link.url }}" class="footer__link">
                  {{ link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </div>

        <!-- Column 4: Newsletter -->
        <div class="footer__column">
          <h3 class="footer__heading">{{ 'sections.footer.newsletter_title' | t }}</h3>
          <p class="footer__newsletter-text">{{ 'sections.footer.newsletter_subtitle' | t }}</p>

          {% form 'customer', class: 'footer__newsletter-form' %}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="footer__newsletter-input-wrapper">
              <input
                type="email"
                name="contact[email]"
                class="footer__newsletter-input"
                placeholder="{{ 'general.newsletter.placeholder' | t }}"
                aria-label="{{ 'general.newsletter.label' | t }}"
                required
              >
              <button type="submit" class="footer__newsletter-button btn btn-primary">
                {{ 'general.newsletter.button_label' | t }}
              </button>
            </div>
          {% endform %}

          <p class="footer__privacy-notice">{{ 'sections.footer.privacy_notice' | t }}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer Bottom: Payment, Security, Social -->
  <div class="footer__bottom">
    <div class="container">
      <!-- Payment Methods -->
      <div class="footer__payment-methods">
        <p class="footer__payment-label">{{ 'sections.footer.payment_methods' | t }}:</p>
        <div class="footer__payment-icons">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'payment_icon' -%}
                <span class="footer__payment-icon" {{ block.shopify_attributes }}>
                  {{ block.settings.icon_name | payment_type_svg_tag }}
                </span>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>

      <!-- Security & Trust Badges -->
      {%- assign security_badges = section.blocks | where: "type", "security_badge" -%}
      {%- if security_badges.size > 0 -%}
        <div class="footer__security-badges">
          <div class="footer__security-badges-grid">
            {%- for block in security_badges -%}
              <div class="footer__security-badge" {{ block.shopify_attributes }}>
                <div class="footer__security-badge-icon">
                  {%- case block.settings.badge_type -%}
                    {%- when 'ssl_secure' -%}
                      <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    {%- when 'money_back' -%}
                      <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                        <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="2"/>
                        <path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        <path d="M16 18a5 5 0 01-8 0" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                      </svg>
                    {%- when 'free_shipping' -%}
                      <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                        <path d="M1 3h15v13H1V3zM16 8h4l3 3v5h-7V8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <circle cx="5.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2"/>
                        <circle cx="18.5" cy="18.5" r="2.5" stroke="currentColor" stroke-width="2"/>
                      </svg>
                    {%- when 'secure_checkout' -%}
                      <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                        <rect x="3" y="11" width="18" height="11" rx="2" stroke="currentColor" stroke-width="2"/>
                        <path d="M7 11V7a5 5 0 0110 0v4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        <circle cx="12" cy="16" r="1" fill="currentColor"/>
                      </svg>
                  {%- endcase -%}
                </div>
                <div class="footer__security-badge-text">
                  <strong>{{ block.settings.badge_title }}</strong>
                  {%- if block.settings.badge_subtitle != blank -%}
                    <span>{{ block.settings.badge_subtitle }}</span>
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}

      <!-- Social Media Links -->
      {%- if section.settings.show_social -%}
        <div class="footer__social">
          {%- if settings.social_instagram != blank -%}
            <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" class="footer__social-link" aria-label="Instagram">
