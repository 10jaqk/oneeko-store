          "default": "visa"
        }
      ]
    },
    {
      "type": "security_badge",
      "name": "Security Badge",
      "settings": [
        {
          "type": "select",
          "id": "badge_type",
          "label": "Badge Type",
          "options": [
            { "value": "ssl_secure", "label": "SSL Secure" },
            { "value": "money_back", "label": "Money Back Guarantee" },
            { "value": "free_shipping", "label": "Free Shipping" },
            { "value": "secure_checkout", "label": "Secure Checkout" }
          ],
          "default": "ssl_secure"
        },
        {
          "type": "text",
          "id": "badge_title",
          "label": "Badge Title",
          "default": "Secure Shopping"
        },
        {
          "type": "text",
          "id": "badge_subtitle",
          "label": "Badge Subtitle (Optional)",
          "default": "SSL Encrypted"
        }
      ]
    }
  ]
}
{% endschema %}
