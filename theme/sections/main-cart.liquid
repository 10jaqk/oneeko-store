<div class="cart-page">
  <div class="container">
    <h1 class="cart-page__title">{{ 'cart.general.title' | t }}</h1>

    {%- if cart.item_count > 0 -%}
      {%- render 'free-shipping-bar' -%}

      <form action="{{ routes.cart_url }}" method="post" class="cart-form">
        <div class="cart-items">
          {%- for item in cart.items -%}
            <div class="cart-item">
              <a href="{{ item.url }}">
                <img
                  src="{{ item.image | img_url: '150x' }}"
                  alt="{{ item.title | escape }}"
                  class="cart-item__img"
                  width="72"
                  height="72"
                  loading="lazy"
                >
              </a>

              <div class="cart-item__info">
                <a href="{{ item.url }}" class="cart-item__title">
                  {{ item.product.title }}
                </a>

                {%- if item.variant.title != 'Default Title' -%}
                  <p class="cart-item__variant cart-item__meta">{{ item.variant.title }}</p>
                {%- endif -%}

                {%- if item.properties.size > 0 -%}
                  <div class="cart-item__properties">
                    {%- for property in item.properties -%}
                      {%- assign property_first_char = property.first | slice: 0 -%}
                      {%- if property.last != blank and property_first_char != '_' -%}
                        <p class="cart-item__meta">{{ property.first }}: {{ property.last }}</p>
                      {%- endif -%}
                    {%- endfor -%}
                  </div>
                {%- endif -%}

                {%- if item.original_price != item.final_price -%}
                  <p class="cart-item__unit-price">
                    <span class="cart-item__price--original">{{ item.original_price | money }}</span>
                    <span class="cart-item__price--sale">{{ item.final_price | money }}</span>
                  </p>
                {%- else -%}
                  <p class="cart-item__unit-price">{{ item.final_price | money }} each</p>
                {%- endif -%}
              </div>

              <div class="cart-item__quantity">
                <label for="quantity-{{ item.key }}" class="visually-hidden">
                  {{ 'cart.general.quantity' | t }}
                </label>
                <div class="cart-item__quantity-selector">
                  <button type="button" class="quantity-btn" onclick="this.nextElementSibling.stepDown(); this.nextElementSibling.dispatchEvent(new Event('change'));" aria-label="Decrease quantity">âˆ’</button>
                  <input
                    type="number"
                    id="quantity-{{ item.key }}"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="0"
                    class="cart-item__quantity-input"
                    data-index="{{ forloop.index }}"
                  >
                  <button type="button" class="quantity-btn" onclick="this.previousElementSibling.stepUp(); this.previousElementSibling.dispatchEvent(new Event('change'));" aria-label="Increase quantity">+</button>
                </div>
              </div>

              <div class="cart-item__total">
                <p class="cart-item__total-price">{{ item.final_line_price | money }}</p>
                <a
                  href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                  class="cart-item__remove"
                  data-index="{{ forloop.index }}"
                >
                  {{ 'cart.general.remove' | t }}
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>

        <div class="cart-footer">
          <div class="cart-footer__note">
            <label for="cart-note">{{ 'cart.general.note' | t }}</label>
            <textarea
              id="cart-note"
              name="note"
              placeholder="{{ 'cart.general.note_placeholder' | t }}"
              rows="3"
            >{{ cart.note }}</textarea>
          </div>

          <div class="cart-summary">
            <div class="cart-summary__subtotal">
              <span class="cart-summary__subtotal-label">{{ 'cart.general.subtotal' | t }}</span>
              <span class="cart-summary__subtotal-price">{{ cart.total_price | money }}</span>
            </div>

            <p class="cart-summary__taxes">{{ 'cart.general.taxes_and_shipping' | t }}</p>

            <button type="submit" name="update" class="btn btn--secondary">
              {{ 'cart.general.update' | t }}
            </button>

            <button type="submit" name="checkout" class="btn btn--primary">
              {{ 'cart.general.checkout' | t }}
            </button>

            <a href="{{ routes.all_products_collection_url }}" class="cart-continue-shopping">
              {{ 'cart.general.continue_shopping' | t }}
            </a>
          </div>
        </div>
      </form>
    {%- else -%}
      <div class="cart-empty">
        <svg class="cart-empty__icon" width="64" height="64" viewBox="0 0 64 64" fill="none">
          <path d="M8 16h48l-4 32H12L8 16z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M20 24v-8a12 12 0 0124 0v8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <p class="cart-empty__message">{{ 'cart.general.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
          {{ 'cart.general.continue_shopping' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
/* Ultra-Compact Cart - True Amazon Style */
:root {
  --cart-text: #0F1111;
  --cart-muted: #565959;
  --cart-link: #007185;
  --cart-divider: #DDD;
  --cart-cta: #d46b08;
  --cart-cta-hover: #bb5f07;
  --cart-bg: #FFFFFF;
}

.cart-page {
  background-color: #F7F7F7;
  min-height: 60vh;
  padding: 24px 12px 32px;
}

.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 0;
}

.cart-page__title {
  font-size: 26px;
  font-weight: 400;
  color: var(--cart-text);
  margin: 0 0 12px 0;
  padding: 0 12px;
}

.cart-items {
  display: flex;
  flex-direction: column;
  gap: 0;
  margin-bottom: 16px;
  background: var(--cart-bg);
  border: 1px solid var(--cart-divider);
  border-radius: 4px;
}

.cart-item {
  border: none;
  border-bottom: 1px solid #EEEEEE;
  border-radius: 0;
  padding: 12px;
  display: grid;
  grid-template-columns: 80px 1fr auto auto;
  gap: 12px;
  align-items: start;
  background-color: var(--cart-bg);
  transition: none;
}

.cart-item:last-child {
  border-bottom: none;
}

.cart-item:hover {
  box-shadow: none;
}

.cart-item__img {
  width: 80px;
  height: 80px;
  object-fit: contain;
  border-radius: 0;
  background-color: #fff;
  display: block;
  border: 1px solid #E7E7E7;
}

.cart-item__info {
  display: flex;
  flex-direction: column;
  gap: 3px;
  min-width: 0;
}

.cart-item__title {
  font-size: 13px;
  font-weight: 400;
  color: var(--cart-link);
  text-decoration: none;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.cart-item__title:hover {
  color: #C7511F;
  text-decoration: underline;
}

.cart-item__variant,
.cart-item__meta {
  font-size: 11px;
  color: var(--cart-muted);
  margin: 0;
  line-height: 1.4;
}

.cart-item__properties {
  font-size: 11px;
  color: var(--cart-muted);
}

.cart-item__properties p {
  margin: 2px 0 0 0;
  line-height: 1.4;
}

.cart-item__unit-price {
  font-size: 11px;
  color: var(--cart-muted);
  margin-top: 2px;
  line-height: 1.4;
}

.cart-item__price--original {
  text-decoration: line-through;
  color: var(--cart-muted);
  margin-right: 4px;
}

.cart-item__price--sale {
  color: #B12704;
}

.cart-item__quantity {
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-item__quantity-selector {
  display: flex;
  align-items: center;
  gap: 0;
  border: 1px solid #E3E6E6;
  border-radius: 6px;
  overflow: hidden;
  background-color: #F7F9F9;
  box-shadow: 0 1px 1px rgba(0,0,0,0.03);
}

.quantity-btn {
  width: 26px;
  height: 26px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F7F9F9;
  border: none;
  color: var(--cart-muted);
  font-size: 12px;
  font-weight: 400;
  cursor: pointer;
  transition: all 0.15s ease;
}

.quantity-btn:hover {
  background-color: #E3E6E6;
  color: var(--cart-text);
}

.cart-item__quantity-input {
  width: 38px !important;
  max-width: 38px !important;
  min-width: 38px !important;
  height: 26px;
  text-align: center;
  border: none;
  border-left: 1px solid #E3E6E6;
  border-right: 1px solid #E3E6E6;
  font-size: 12px;
  font-weight: 400;
  color: var(--cart-text);
  padding: 0;
  background-color: #F7F9F9;
}

.cart-item__quantity-input::-webkit-inner-spin-button,
.cart-item__quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.cart-item__quantity-input:focus {
  outline: 2px solid #007185;
  outline-offset: -2px;
}

.cart-item__total {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6px;
  min-width: 90px;
}

.cart-item__total-price {
  font-size: 16px;
  font-weight: 700;
  color: #B12704;
  margin: 0;
}

.cart-item__remove {
  font-size: 11px;
  color: var(--cart-link);
  text-decoration: none;
  cursor: pointer;
  transition: all 0.15s ease;
  padding: 0;
  background: none;
  border: none;
}

.cart-item__remove:hover {
  color: #C7511F;
  text-decoration: underline;
}

.cart-footer {
  display: grid;
  grid-template-columns: 1fr 360px;
  gap: 20px;
  margin-top: 16px;
}

.cart-footer__note {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.cart-footer__note label {
  font-size: 13px;
  font-weight: 700;
  color: var(--cart-text);
}

.cart-footer__note textarea {
  width: 100%;
  padding: 8px 10px;
  border: 1px solid #D5D9D9;
  border-radius: 4px;
  font-family: inherit;
  font-size: 13px;
  resize: vertical;
  transition: all 0.2s ease;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

.cart-footer__note textarea:focus {
  outline: 2px solid #007185;
  outline-offset: -2px;
  border-color: #007185;
  box-shadow: 0 0 0 3px rgba(0, 113, 133, 0.1);
}

.cart-summary {
  border: 1px solid var(--cart-divider);
  border-radius: 4px;
  padding: 12px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  gap: 8px;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

.cart-summary__subtotal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 8px;
  border-bottom: 1px solid #E7E7E7;
}

.cart-summary__subtotal-label {
  font-size: 13px;
  color: var(--cart-text);
  font-weight: 400;
}

.cart-summary__subtotal-price {
  font-size: 17px;
  font-weight: 700;
  color: #B12704;
}

.cart-summary__taxes {
  font-size: 11px;
  color: var(--cart-muted);
  text-align: center;
  margin: 0;
}

.cart-summary .btn {
  height: 38px;
  border-radius: 8px;
  font-size: 13px;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.15s ease;
  font-family: inherit;
  border: 1px solid;
}

.btn--secondary {
  background-color: #FFF;
  color: var(--cart-text);
  border-color: #D5D9D9;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

.btn--secondary:hover {
  background-color: #F7FAFA;
  border-color: #ADB1B8;
}

.btn--primary {
  background: linear-gradient(to bottom, #f7dfa5, #f0c14b);
  color: #111;
  border-color: #a88734 #9c7e31 #846a29;
  box-shadow: 0 1px 0 rgba(255,255,255,.4) inset;
}

.btn--primary:hover {
  background: linear-gradient(to bottom, #f5d78e, #edb939);
  border-color: #a88734 #9c7e31 #846a29;
}

.cart-continue-shopping {
  text-align: center;
  font-size: 11px;
  color: var(--cart-link);
  text-decoration: none;
  display: block;
  padding: 4px 0;
}

.cart-continue-shopping:hover {
  color: #C7511F;
  text-decoration: underline;
}

.cart-empty {
  text-align: center;
  padding: 50px 20px;
}

.cart-empty__icon {
  color: #d1d5db;
  margin: 0 auto 16px;
}

.cart-empty__message {
  font-size: 15px;
  color: var(--cart-muted);
  margin: 0 0 16px 0;
}

.free-shipping-bar {
  flex-shrink: 0;
  margin: 0 0 12px 0;
  padding: 8px 10px;
  background: #F7F9F9;
  border: 1px solid #E7E7E7;
  border-radius: 4px;
}

.free-shipping-bar__message {
  font-size: 12px;
  color: #007600;
  font-weight: 400;
  text-align: left;
  margin: 0 0 4px 0;
}

.free-shipping-bar__progress {
  height: 6px;
  border-radius: 3px;
  background: #E7E7E7;
  overflow: hidden;
}

.free-shipping-bar__bar {
  height: 100%;
  background: #007600;
  transition: width 0.3s ease;
}

.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

@media (max-width: 991px) {
  .cart-footer {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  .cart-summary {
    order: -1;
  }
}

@media (max-width: 767px) {
  .cart-page {
    padding: 20px 12px 24px;
  }

  .cart-page__title {
    font-size: 22px;
    margin-bottom: 12px;
  }

  .cart-items {
    gap: 0;
    margin-bottom: 12px;
  }

  .cart-item {
    grid-template-columns: 64px 1fr;
    grid-template-areas:
      "img info"
      "img qty"
      "total total";
    gap: 8px;
    padding: 10px;
  }

  .cart-item__img {
    grid-area: img;
    width: 64px;
    height: 64px;
  }

  .cart-item__info {
    grid-area: info;
  }

  .cart-item__quantity {
    grid-area: qty;
    justify-content: flex-start;
    margin-top: 4px;
  }

  .cart-item__total {
    grid-area: total;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .cart-summary__subtotal-price {
    font-size: 15px;
  }
}
</style>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}
