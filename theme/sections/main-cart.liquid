<div class="cart-page">
  <div class="container">
    <h1 class="cart-page__title">{{ 'cart.general.title' | t }}</h1>

    {%- if cart.item_count > 0 -%}
      {%- render 'free-shipping-bar' -%}

      <form action="{{ routes.cart_url }}" method="post" class="cart-form">
        <div class="cart-items">
          {%- for item in cart.items -%}
            <div class="cart-item">
              <a href="{{ item.url }}">
                <img
                  src="{{ item.image | img_url: '150x' }}"
                  alt="{{ item.title | escape }}"
                  class="cart-item__img"
                  width="72"
                  height="72"
                  loading="lazy"
                >
              </a>

              <div class="cart-item__info">
                <a href="{{ item.url }}" class="cart-item__title">
                  {{ item.product.title }}
                </a>

                {%- if item.variant.title != 'Default Title' -%}
                  <p class="cart-item__variant cart-item__meta">{{ item.variant.title }}</p>
                {%- endif -%}

                {%- if item.properties.size > 0 -%}
                  <div class="cart-item__properties">
                    {%- for property in item.properties -%}
                      {%- assign property_first_char = property.first | slice: 0 -%}
                      {%- if property.last != blank and property_first_char != '_' -%}
                        <p class="cart-item__meta">{{ property.first }}: {{ property.last }}</p>
                      {%- endif -%}
                    {%- endfor -%}
                  </div>
                {%- endif -%}

                {%- if item.original_price != item.final_price -%}
                  <p class="cart-item__unit-price">
                    <span class="cart-item__price--original">{{ item.original_price | money }}</span>
                    <span class="cart-item__price--sale">{{ item.final_price | money }}</span>
                  </p>
                {%- else -%}
                  <p class="cart-item__unit-price">{{ item.final_price | money }} each</p>
                {%- endif -%}
              </div>

              <div class="cart-item__quantity">
                <label for="quantity-{{ item.key }}" class="visually-hidden">
                  {{ 'cart.general.quantity' | t }}
                </label>
                <div class="cart-item__quantity-selector">
                  <button type="button" class="quantity-btn" onclick="this.nextElementSibling.stepDown(); this.nextElementSibling.dispatchEvent(new Event('change'));" aria-label="Decrease quantity">âˆ’</button>
                  <input
                    type="number"
                    id="quantity-{{ item.key }}"
                    name="updates[]"
                    value="{{ item.quantity }}"
                    min="0"
                    class="cart-item__quantity-input"
                    data-index="{{ forloop.index }}"
                  >
                  <button type="button" class="quantity-btn" onclick="this.previousElementSibling.stepUp(); this.previousElementSibling.dispatchEvent(new Event('change'));" aria-label="Increase quantity">+</button>
                </div>
              </div>

              <div class="cart-item__total">
                <p class="cart-item__total-price">{{ item.final_line_price | money }}</p>
                <a
                  href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0"
                  class="cart-item__remove"
                  data-index="{{ forloop.index }}"
                >
                  {{ 'cart.general.remove' | t }}
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>

        <div class="cart-footer">
          <div class="cart-footer__note">
            <label for="cart-note">{{ 'cart.general.note' | t }}</label>
            <textarea
              id="cart-note"
              name="note"
              placeholder="{{ 'cart.general.note_placeholder' | t }}"
              rows="3"
            >{{ cart.note }}</textarea>
          </div>

          <div class="cart-summary">
            <div class="cart-summary__subtotal">
              <span class="cart-summary__subtotal-label">{{ 'cart.general.subtotal' | t }}</span>
              <span class="cart-summary__subtotal-price">{{ cart.total_price | money }}</span>
            </div>

            <p class="cart-summary__taxes">{{ 'cart.general.taxes_and_shipping' | t }}</p>

            <button type="submit" name="update" class="btn btn--secondary">
              {{ 'cart.general.update' | t }}
            </button>

            <button type="submit" name="checkout" class="btn btn--primary">
              {{ 'cart.general.checkout' | t }}
            </button>

            <a href="{{ routes.all_products_collection_url }}" class="cart-continue-shopping">
              {{ 'cart.general.continue_shopping' | t }}
            </a>
          </div>
        </div>
      </form>
    {%- else -%}
      <div class="cart-empty">
        <svg class="cart-empty__icon" width="64" height="64" viewBox="0 0 64 64" fill="none">
          <path d="M8 16h48l-4 32H12L8 16z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M20 24v-8a12 12 0 0124 0v8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <p class="cart-empty__message">{{ 'cart.general.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
          {{ 'cart.general.continue_shopping' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
/* Compact Cart Page - Amazon Style */
:root {
  --cart-text: #111827;
  --cart-muted: #6b7280;
  --cart-divider: #e5e7eb;
  --cart-cta: #d46b08;
  --cart-cta-hover: #bb5f07;
  --cart-success: #10b981;
  --cart-bg-light: #f9fafb;
}

.cart-page {
  background-color: #fff;
  min-height: 60vh;
  padding: 60px 20px 60px;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.cart-page__title {
  font-size: 28px;
  font-weight: 700;
  color: var(--cart-text);
  margin: 0 0 24px 0;
  text-align: center;
}

.cart-items {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 24px;
}

.cart-item {
  border: 1px solid var(--cart-divider);
  border-radius: 10px;
  padding: 12px;
  display: grid;
  grid-template-columns: 72px 1fr auto auto;
  gap: 12px;
  align-items: center;
  background-color: #fff;
  transition: all 0.2s ease;
}

.cart-item:hover {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.cart-item__img {
  width: 72px;
  height: 72px;
  object-fit: cover;
  border-radius: 8px;
  background-color: var(--cart-bg-light);
  display: block;
}

.cart-item__info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  min-width: 0;
}

.cart-item__title {
  font-size: 14px;
  font-weight: 600;
  color: var(--cart-text);
  text-decoration: none;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.cart-item__title:hover {
  color: #2563eb;
}

.cart-item__variant,
.cart-item__meta {
  font-size: 12px;
  color: var(--cart-muted);
  margin: 0;
}

.cart-item__properties {
  font-size: 12px;
  color: var(--cart-muted);
}

.cart-item__properties p {
  margin: 2px 0 0 0;
}

.cart-item__unit-price {
  font-size: 12px;
  color: var(--cart-muted);
  margin-top: 2px;
}

.cart-item__price--original {
  text-decoration: line-through;
  color: var(--cart-muted);
  margin-right: 6px;
}

.cart-item__price--sale {
  color: #dc2626;
}

.cart-item__quantity {
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-item__quantity-selector {
  display: flex;
  align-items: center;
  gap: 0;
  border: 1px solid var(--cart-divider);
  border-radius: 8px;
  overflow: hidden;
  background-color: #fff;
}

.quantity-btn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border: none;
  color: var(--cart-muted);
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.15s ease;
}

.quantity-btn:hover {
  background-color: var(--cart-bg-light);
  color: var(--cart-text);
}

.cart-item__quantity-input {
  width: 54px;
  height: 36px;
  text-align: center;
  border: none;
  border-left: 1px solid var(--cart-divider);
  border-right: 1px solid var(--cart-divider);
  font-size: 14px;
  font-weight: 600;
  color: var(--cart-text);
  padding: 0;
}

.cart-item__quantity-input::-webkit-inner-spin-button,
.cart-item__quantity-input::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

.cart-item__quantity-input:focus {
  outline: none;
}

.cart-item__total {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8px;
  min-width: 100px;
}

.cart-item__total-price {
  font-size: 16px;
  font-weight: 700;
  color: var(--cart-text);
  margin: 0;
}

.cart-item__remove {
  font-size: 12px;
  color: var(--cart-muted);
  text-decoration: none;
  cursor: pointer;
  transition: all 0.15s ease;
  padding: 0;
  background: none;
  border: none;
}

.cart-item__remove:hover {
  color: #dc2626;
  text-decoration: underline;
}

.cart-footer {
  display: grid;
  grid-template-columns: 1fr 400px;
  gap: 24px;
  margin-top: 24px;
}

.cart-footer__note {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.cart-footer__note label {
  font-size: 14px;
  font-weight: 600;
  color: var(--cart-text);
}

.cart-footer__note textarea {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid var(--cart-divider);
  border-radius: 8px;
  font-family: inherit;
  font-size: 14px;
  resize: vertical;
  transition: all 0.2s ease;
}

.cart-footer__note textarea:focus {
  outline: none;
  border-color: var(--cart-cta);
  box-shadow: 0 0 0 3px rgba(212, 107, 8, 0.1);
}

.cart-summary {
  border: 1px solid var(--cart-divider);
  border-radius: 10px;
  padding: 14px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.cart-summary__subtotal {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10px;
  border-bottom: 1px solid var(--cart-divider);
}

.cart-summary__subtotal-label {
  font-size: 13px;
  color: var(--cart-muted);
  font-weight: 500;
}

.cart-summary__subtotal-price {
  font-size: 18px;
  font-weight: 700;
  color: var(--cart-text);
}

.cart-summary__taxes {
  font-size: 12px;
  color: var(--cart-muted);
  text-align: center;
  margin: 0;
}

.cart-summary .btn {
  height: 42px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;
  font-family: inherit;
  border: none;
}

.btn--secondary {
  background-color: #fff;
  color: var(--cart-cta);
  border: 1px solid var(--cart-cta);
}

.btn--secondary:hover {
  background-color: #fef3e6;
  border-color: var(--cart-cta-hover);
  color: var(--cart-cta-hover);
}

.btn--primary {
  background: var(--cart-cta);
  color: #fff;
}

.btn--primary:hover {
  background: var(--cart-cta-hover);
}

.cart-continue-shopping {
  text-align: center;
  font-size: 12px;
  color: var(--cart-muted);
  text-decoration: underline;
  display: block;
  padding: 6px 0;
}

.cart-continue-shopping:hover {
  color: var(--cart-text);
}

.cart-empty {
  text-align: center;
  padding: 60px 20px;
}

.cart-empty__icon {
  color: #d1d5db;
  margin: 0 auto 20px;
}

.cart-empty__message {
  font-size: 16px;
  color: var(--cart-muted);
  margin: 0 0 20px 0;
}

.free-shipping-bar {
  flex-shrink: 0;
  margin: 0 0 16px 0;
  padding: 10px 12px;
  background: #ecfdf5;
  border: 1px solid #a7f3d0;
  border-radius: 8px;
}

.free-shipping-bar__message {
  font-size: 13px;
  color: #047857;
  font-weight: 500;
  text-align: center;
  margin: 0 0 6px 0;
}

.free-shipping-bar__progress {
  height: 8px;
  border-radius: 999px;
  background: #d1fae5;
  overflow: hidden;
}

.free-shipping-bar__bar {
  height: 100%;
  background: var(--cart-success);
  transition: width 0.3s ease;
}

.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

@media (max-width: 991px) {
  .cart-footer {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .cart-summary {
    order: -1;
  }
}

@media (max-width: 767px) {
  .cart-page {
    padding: 40px 16px 40px;
  }

  .cart-page__title {
    font-size: 24px;
    margin-bottom: 20px;
  }

  .cart-items {
    gap: 10px;
    margin-bottom: 20px;
  }

  .cart-item {
    grid-template-columns: 72px 1fr;
    grid-template-areas:
      "img info"
      "img qty"
      "total total";
    gap: 10px;
  }

  .cart-item__img {
    grid-area: img;
  }

  .cart-item__info {
    grid-area: info;
  }

  .cart-item__quantity {
    grid-area: qty;
    justify-content: flex-start;
    margin-top: 4px;
  }

  .cart-item__total {
    grid-area: total;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .cart-summary__subtotal-price {
    font-size: 16px;
  }
}
</style>

